@model AdimRic841PipingCharVV.Models.FunctionalLocationModel
@{
    ViewBag.Title = "Create New Record";
}

<h2>Create New Record</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col col-md-6 col-sm-6">
            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h1 class="panel-title">Create Form</h1>
                </div>
                <div class="panel-body">
                    @* Html.ValidationSummary() *@

                    <div class="form-group">
                        @Html.LabelFor(x => x.LocationId)
                        @Html.EditorFor(x => x.LocationId)
                        @Html.ValidationMessageFor(x => x.LocationId)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Unit)
                        @Html.EditorFor(x => x.Unit)
                        @Html.ValidationMessageFor(x => x.Unit)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BusinesssArea)
                        @Html.EditorFor(x => x.BusinesssArea)
                        @Html.ValidationMessageFor(x => x.BusinesssArea)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.ApiPipeClass)
                        @Html.EditorFor(x => x.ApiPipeClass)
                        @Html.ValidationMessageFor(x => x.ApiPipeClass)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.RefineryPipeClass)
                        @Html.EditorFor(x => x.RefineryPipeClass)
                        @Html.ValidationMessageFor(x => x.RefineryPipeClass)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.PipingMaterial)
                        @Html.EditorFor(x => x.PipingMaterial)
                        @Html.ValidationMessageFor(x => x.PipingMaterial)
                    </div>
                </div>
                <!--Panel Body-->
                <div class="panel-footer">
                    <button class="btn btn-primary"
                            type="submit">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Save Record
                    </button>
                    <button class="btn btn-default"
                            type="button"
                            onclick="location.href = '@Url.Action("DisplayCmWithDwgData", "Home")'">
                        <i class="glyphicon glyphicon-remove-circle"></i>
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}